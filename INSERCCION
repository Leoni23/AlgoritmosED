#include <iostream>
using namespace std;


int main() {
  int a[]={4,3,2,1,5};
  int pos,aux;

  for(int i=0; i<5; i++)
  {
    pos=i; //almaceno la posicion inicial 0
    aux=a[i];//almacena el elemento del arglo 4
    while((pos>0)&&(a[pos-1]>aux))
    {
      a[pos]=a[pos-1];
      pos--;
    }
    //intercambio
    a[pos]=aux;
  }
  for(int i=0; i<5; i++)
  {
    cout<<"|"<<a[i]<<"|";
  }
} 
